ARG SIFT_REGISTRY_ROOT
FROM ${SIFT_REGISTRY_ROOT}funman-dreal4:${TARGETOS}-${TARGETARCH}

# Install base dependencies
RUN apt update && apt install -y --no-install-recommends \
    curl \
    make \
    git \
    python3-dev \
    python3-pip \
    python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Install automates dependencies
ARG DEBIAN_FRONTEND=noninteractive
RUN apt update && apt install -y \
    antlr4 \
    build-essential \
    gcc \
    graphviz \
    libgraphviz-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Initialize python virtual environment
ENV VIRTUAL_ENV="/funman_venv"
RUN python3 -m venv $VIRTUAL_ENV
ENV PATH="$VIRTUAL_ENV/bin:$PATH"

# Install automates
RUN git clone --depth=1 https://github.com/danbryce/automates.git automates \
    && cd automates \
    && git fetch --depth=1 origin e5fb635757aa57007615a75371f55dd4a24851e0 \
    && git checkout e5fb635757aa57007615a75371f55dd4a24851e0
RUN pip install -e automates

RUN pip install --no-cache-dir z3-solver==4.12.6
RUN pip install --no-cache-dir graphviz

# Install funman dev packages
RUN pip install --no-cache-dir \
  funman \
  funman_demo \
  funman_dreal

RUN git clone --depth=1 --branch main https://github.com/ml4ai/funman.git /funman

WORKDIR "/funman"
EXPOSE 8888
CMD [ "jupyter", "notebook", "--allow-root", "--ip", "0.0.0.0", "--no-browser", "/funman/notebooks" ]
